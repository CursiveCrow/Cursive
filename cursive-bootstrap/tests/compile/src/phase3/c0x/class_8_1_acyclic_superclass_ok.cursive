class Base { procedure base_method(~) -> i32 }
class Derived <: Base { procedure derived_method(~) -> i32 }

record MyType { value: i32 }

MyType <: Base { procedure base_method(~) -> i32 { return self.value } }
MyType <: Derived { procedure derived_method(~) -> i32 { return self.value * 2 } }

public procedure main(ctx: Context) -> i32 {
  var m: MyType = MyType { value: 21 }
  return m ~> base_method() + m ~> derived_method()
}
