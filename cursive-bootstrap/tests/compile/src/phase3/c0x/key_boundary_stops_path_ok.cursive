# SPEC_COV: C0X-Key-TypeBoundary
# SPEC_COV: C0X-Key-BoundaryTruncate
// Tests that type-level boundary truncates key path derivation.

record InternalData { secret: i32 }
record Container {
  public_data: i32
  #internal: InternalData
}

public procedure main(ctx: Context) -> i32 {
  var c: shared Container = Container { 
    public_data: 1,
    #internal: InternalData { secret: 42 }
  }
  // Key path stops at #internal; cannot derive deeper key
  # c {
    return c.public_data
  }
  return 0
}
