// Tests shared binding capture in spawn (ยง18.3.2)
// Note: Full shared permission support is C0X-specific, using const for now
// Expected: no diagnostics

record Data { value: i32 }

public procedure main(ctx: Context) -> i32 {
  let domain: $ExecutionDomain = ctx~>cpu()
  let data = Data { value: 42 }
  parallel domain {
    let h = spawn {
      // Capture const binding by reference
      data.value
    }
    wait h
  }
  return 0
}
