# SPEC_COV: C0X-7.6.3-Release
# SPEC_COV: KeyBlock-Release
// ยง7.6.3: Release block releases keys for duration then reacquires after.

record Data { value: i32 }

procedure helper(d: shared Data) -> i32 {
  # d {
    return d.value
  }
  return 0
}

public procedure main(ctx: Context) -> i32 {
  var d: shared Data = Data { value: 42 }
  # d write {
    d.value = 100
    # d release {
      // Keys released here, can call helper that acquires same key
      var v: i32 = helper(d)
    }
    // Keys reacquired here
    d.value = d.value + 1
  }
  return d.value
}
