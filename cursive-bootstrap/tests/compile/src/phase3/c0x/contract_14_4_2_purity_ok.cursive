# SPEC_COV: C0X-14.4.2-PurityConstraint
# SPEC_COV: pure-predicate
// ยง14.4.2: All expressions within a contract MUST be pure.
// Pure means: no capability params, no observable mutation.

procedure pure_contract(a: i32, b: i32) -> i32
  |= a + b > 0 => @result == a + b
{
  return a + b
}

public procedure main(ctx: Context) -> i32 {
  var x: i32 = 3
  var y: i32 = 4
  return pure_contract(x, y)
}
