record Data { value: i32 }

public procedure main(ctx: Context) -> i32 {
  let domain = ctx~>cpu()
  let data: unique Data = Data { value: 42 }
  let res: i32 = parallel domain {
    // Error: unique binding captured without explicit move
    let h = spawn {
      return data.value
    }
    return wait h
  }
  return res
}
