# SPEC_COV: C0X-14.6.2-LoopInvariant
# SPEC_COV: LoopInvariant-WF
// ยง14.6.2: Loop invariant specifies predicate that MUST hold at iteration start and after termination.

public procedure main(ctx: Context) -> i32 {
  var sum: i32 = 0
  var i: i32 = 0
  loop i < 5 where { i >= 0 && i <= 5 && sum >= 0 } {
    sum = sum + i
    i = i + 1
  }
  return sum
}
