// RUN: run-pass
// EXIT: 0
// SPEC: 6.4 Lower-Expr-Transmute
// DESC: Verify bitcast/transmute instruction lowering

public procedure main(move ctx: Context) -> i32 {
    let a: i32 = 42
    let b: u32 = unsafe { transmute<i32, u32>(a) }
    let c: i32 = unsafe { transmute<u32, i32>(b) }

    let ok: bool = c == 42
    return if ok { 0 } else { 1 }
}
