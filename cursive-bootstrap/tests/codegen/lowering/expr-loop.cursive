// RUN: run-pass
// EXIT: 10
// SPEC: 6.4 Lower-Expr-Loop
// DESC: Verify loop structure lowering

public procedure main(move ctx: Context) -> i32 {
    var i: i32 = 0
    loop i < 10 {
        i = i + 1
    }

    var sum: i32 = 0
    var j: i32 = 1
    loop j <= 4 {
        sum = sum + j
        j = j + 1
    }

    return if sum == 10 { i } else { 1 }
}
