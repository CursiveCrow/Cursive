// RUN: compile-pass
// SPEC: 6.1 Layout-Tuple
// DESC: Verify tuple field offsets with alignment padding

public procedure main(move ctx: Context) -> i32 {
    // Empty tuple (unit) has size 0
    static_assert(sizeof(()) == 0)

    // Single element tuple
    static_assert(sizeof((i32;)) == 4)
    static_assert(alignof((i32;)) == 4)

    // Two element tuple: (i8, i32) requires padding
    // Layout: i8 (1) + pad (3) + i32 (4) = 8
    static_assert(sizeof((i8, i32)) == 8)
    static_assert(alignof((i8, i32)) == 4)

    // (i32, i8) layout: i32 (4) + i8 (1) + pad (3) = 8
    static_assert(sizeof((i32, i8)) == 8)
    static_assert(alignof((i32, i8)) == 4)

    // Homogeneous tuple
    static_assert(sizeof((i64, i64)) == 16)
    static_assert(alignof((i64, i64)) == 8)

    return 0
}
