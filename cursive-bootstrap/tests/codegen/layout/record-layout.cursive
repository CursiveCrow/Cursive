// RUN: compile-pass
// SPEC: 5.2.3
// DESC: Verify record type layout and alignment

record Padded {
    a: i8
    b: i32
    c: i8
}

record PackedEquiv {
    a: i8
    _pad1: [u8; 3]
    b: i32
    c: i8
    _pad2: [u8; 3]
}

public procedure main(move ctx: Context) -> i32 {
    // Record should have padding for alignment
    static_assert(alignof(Padded) == 4)

    // i32 field requires 4-byte alignment
    static_assert(sizeof(Padded) >= 12)

    return 0
}
