// RUN: compile-pass
// SPEC: 6.1 Layout-RawPtr
// DESC: Verify raw pointer layout: sizeof = PtrSize, alignof = PtrAlign

public procedure main(move ctx: Context) -> i32 {
    // *imm T should be pointer-sized (8 bytes on 64-bit)
    static_assert(sizeof(*imm i32) == 8)
    static_assert(alignof(*imm i32) == 8)

    // *mut T should be pointer-sized
    static_assert(sizeof(*mut i32) == 8)
    static_assert(alignof(*mut i32) == 8)

    // Raw pointer layout is independent of pointee type
    static_assert(sizeof(*imm i8) == 8)
    static_assert(sizeof(*mut i64) == 8)

    return 0
}
