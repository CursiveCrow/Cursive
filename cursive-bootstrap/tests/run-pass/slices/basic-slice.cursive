// DESC: Basic slice operations

procedure sum_slice(s: [i32]) -> i32 {
    var total: i32 = 0
    var i: usize = 0
    loop i < s ~> len() {
        total = total + s ~> get(i)
        i = i + 1
    }
    return total
}

public procedure main(move ctx: Context) -> i32 {
    let arr: [i32; 3] = [10, 12, 20]
    let slice: [i32] = arr[..]
    return sum_slice(slice)
}
