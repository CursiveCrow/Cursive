// RUN: run-pass
// EXIT: 42
// SPEC: 5.2.7
// DESC: Record pattern matching

record Point {
    x: i32
    y: i32
}

procedure sum_coords(p: Point) -> i32 {
    let Point{ x, y } = p
    return x + y
}

public procedure main(move ctx: Context) -> i32 {
    let p: Point = Point{ x: 20, y: 22 }
    return sum_coords(p)
}
