record LargeState {
    data: [i32; 512]
}

procedure sum_large(state: LargeState) -> Future<i32> {
    var sum: i32 = 0
    var i: usize = 0
    loop i < 512 {
        sum = sum + state.data[i]
        i = i + 1
    }
    return sum
}

public procedure main(move ctx: Context) -> i32 {
    let large: LargeState = LargeState{ data: [0; 512] }
    let async_op: Future<i32> = sum_large(large)  //~ WARN W-CON-0201: Large captured state
    return 0
}
