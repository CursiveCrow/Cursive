// RUN: compile-pass
// SPEC: 6.1 Layout-Array
// DESC: Verify array layout: sizeof([T; N]) == N * sizeof(T)

public procedure main(move ctx: Context) -> i32 {
    // Array of i32
    static_assert(sizeof([i32; 1]) == 4)
    static_assert(sizeof([i32; 4]) == 16)
    static_assert(sizeof([i32; 10]) == 40)
    static_assert(alignof([i32; 4]) == 4)

    // Array of i8 (no padding between elements)
    static_assert(sizeof([i8; 4]) == 4)
    static_assert(sizeof([i8; 10]) == 10)

    // Array of i64
    static_assert(sizeof([i64; 2]) == 16)
    static_assert(alignof([i64; 2]) == 8)

    // Zero-length array
    static_assert(sizeof([i32; 0]) == 0)

    return 0
}
