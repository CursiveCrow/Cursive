// RUN: run-pass
// EXIT: 42
// SPEC: 5.4
// DESC: Mutable static variable

var counter: i32 = 0

procedure increment() -> () {
    counter = counter + 1
}

public procedure main(move ctx: Context) -> i32 {
    var i: i32 = 0
    loop i < 42 {
        increment()
        i = i + 1
    }
    return counter
}
