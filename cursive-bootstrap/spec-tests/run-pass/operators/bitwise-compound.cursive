// RUN: run-pass
// EXIT: 5
// SPEC: 5.2.5, 9.2
// DESC: Bitwise compound assignment operators (&=, |=, ^=, <<=, >>=)

public procedure main(move ctx: Context) -> i32 {
    var x: i32 = 0b1111
    x &= 0b0101

    var y: i32 = 0b0010
    y |= 0b0100

    var z: i32 = 0b1111
    z ^= 0b1010

    var a: i32 = 1
    a <<= 2

    var b: i32 = 16
    b >>= 2

    return z
}
